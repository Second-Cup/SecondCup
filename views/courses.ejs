    <style>
      /* In your style/style.css or wherever your main styles are defined */

      body {
        overflow-y: auto; /* Ensure vertical scrolling is enabled */
      }

      .slider-bg {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 56.25%; /* Aspect ratio 16:9 */
        overflow: hidden;
      }

      .kaludada {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;
        height: 100%;
        transform: translate(-50%, -50%);
        object-fit: cover; /* Ensures the video covers the entire container */
      }

      /* For smaller screens, adjust the height if needed */
      @media (max-width: 768px) {
        .slider-bg {
          padding-bottom: 75%; /* Adjust aspect ratio for smaller screens if needed */
        }
      }

      .course {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
        color: var(--gold-crayola);
        margin: 0;
        font-size: 3em;
      }

      .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap; /* Allow wrapping for responsiveness */
        gap: 40px; /* Space between elements, adjust as needed */
      }

      .text-container {
        flex: 1;
        margin-right: 20px; /* Adjust as needed */
      }

      .text-container h2 {
        font-family: "Times New Roman", Times, serif;
      }

      .bullet-points {
        padding-left: 40px; /* Add padding to the left for space */
        font-family: "Courier New", Courier, monospace;
      }

      .bullet-points li {
        margin-bottom: 10px; /* Add space between bullet points */
        list-style-type: disc; /* Add bullet points */
      }

      .image-container {
        flex: 1;
        display: flex;
        justify-content: flex-end;
      }

      .image-container video {
        max-width: 100%;
        height: auto;
        border-radius: 2.5%; /* Make image circular */
      }
      .image-container-2 {
        flex: 1;
        display: flex;
        justify-content: flex-end;
      }
      .image-container-2 video {
        max-width: 100%;
        height: auto;
        border-radius: 2.5%;
      }

      .bullet-points-2 {
        padding-left: 40px; /* Add padding to the left for space */
        font-family: "Courier New", Courier, monospace;
      }

      .bullet-points-2 li {
        margin-bottom: 10px; /* Add space between bullet points */
        list-style-type: disc; /* Add bullet points */
      }

      .container-contact {
        width: 100%;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .container-contact .row {
        display: flex;
        justify-content: space-between;
        width: 100%;
        max-width: 1100px;
      }
      .row section.col {
        display: flex;
        flex-direction: column;
      }
      .row section.left {
        flex-basis: 35%;
        min-width: 320px;
        margin-right: 60px;
      }
      .row section.right {
        flex-basis: 60%;
      }
      section.left .contactTitle h2 {
        position: relative;
        font-size: 28px;
        color: #ddd;
        display: inline-block;
        margin-bottom: 25px;
      }
      section.left .contactTitle h2::before {
        content: "";
        position: absolute;
        width: 50%;
        height: 1px;
        background-color: #888;
        top: 120%;
        left: 0;
      }
      section.left .contactTitle h2::after {
        content: "";
        position: absolute;
        width: 25%;
        height: 3px;
        background-color: #e4c590;
        top: calc(120% - 1px);
        left: 0;
      }
      section.left .contactTitle p {
        font-size: 17px;
        color: #ccc;
        letter-spacing: 1px;
        line-height: 1.2;
        padding-bottom: 22px;
      }
      section.left .contactInfo {
        margin-bottom: 16px;
      }
      .contactInfo .iconGroup {
        display: flex;
        align-items: center;
        margin: 25px 0px;
      }
      .iconGroup .icon {
        width: 45px;
        height: 45px;
        border: 2px solid #e4c590;
        border-radius: 50%;
        margin-right: 20px;
        position: relative;
      }
      .iconGroup .icon i {
        font-size: 20px;
        color: #ddd;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
      .iconGroup .details span {
        display: block;
        color: #888;
        font-size: 18px;
      }
      .iconGroup .details span:nth-child(1) {
        text-transform: uppercase;
        color: #ccc;
      }
      section.left .socialMedia {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
        margin: 22px 0px 20px;
      }
      .socialMedia a {
        width: 35px;
        height: 35px;
        text-decoration: none;
        text-align: center;
        margin-right: 15px;
        border-radius: 5px;
        background-color: #e4c590;
      }
      .socialMedia a i {
        color: #000000;
        font-size: 18px;
        line-height: 35px;
        border: 1px solid transparent;
      }
      .socialMedia a:hover {
        transform: scale(-5px);
        background-color: #2e2e2e;
        background-color: #e4c590;
        color: #e4c590;
        border: 1px solid rgb(0, 0, 0);
      }
      .socialMedia a:hover i {
        color: #000000;
      }

      /* Code for the right section (column) */

      .row section.right .messageForm {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        padding-top: 30px;
      }
      .row section.right .inputGroup {
        margin: 18px 0px;
        position: relative;
      }
      .messageForm .halfWidth {
        flex-basis: 48%;
      }
      .messageForm .fullWidth {
        flex-basis: 100%;
      }
      .messageForm input,
      .messageForm textarea {
        width: 100%;
        font-size: 18px;
        padding: 2px 0px;
        background-color: #2e2e2e;
        color: #ddd;
        border: none;
        border-bottom: 2px solid #666;
        outline: none;
      }
      .messageForm textarea {
        resize: none;
        height: 220px;
        display: block;
      }
      textarea::-webkit-scrollbar {
        width: 5px;
      }
      textarea::-webkit-scrollbar-track {
        background-color: #1e1e1e;
        border-radius: 15px;
      }
      textarea::-webkit-scrollbar-thumb {
        background-color: #e4c590;
        border-radius: 15px;
      }
      .inputGroup label {
        position: absolute;
        left: 0;
        bottom: 4px;
        color: #888;
        font-size: 18px;
        transition: 0.4s;
        pointer-events: none;
      }
      .inputGroup:nth-child(4) label {
        top: 2px;
      }
      .inputGroup input:focus ~ label,
      .inputGroup textarea:focus ~ label,
      .inputGroup input:valid ~ label,
      .inputGroup textarea:valid ~ label {
        transform: translateY(-30px);
        font-size: 16px;
      }
      .inputGroup button {
        padding: 8px 16px;
        font-size: 18px;
        background-color: #e4c590;
        color: #000000;
        border: 1px solid transparent;
        border-radius: 25px;
        outline: none;
        cursor: pointer;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
        transition: 0.4s;
      }
      .inputGroup button:hover {
        background-color: #2e2e2e;
        color: rgb(0, 0, 0);
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0);
        border: 1px solid #e4c590;
      }

      @media only screen and (max-width: 600px) {
        .container-contact .row {
          flex-wrap: wrap;
          justify-content: center;
        }

        .row section.left,
        .row section.right {
          flex-basis: 100%;
          margin: 15px;
          padding: 0;
        }

        /* Form fields and button below the icons */
        .row section.left {
          margin-bottom: 0px;
        }

        /* Ensure input fields take full width */
        .messageForm .halfWidth {
          flex-basis: 100%;
        }
      }
    </style>
  </head>
  <body>
    <%- include('nav') %>

    <main>
      <article>
        <section class="hero text-center" aria-label="home" id="home">
          <ul class="hero-slider" data-hero-slider>
            <li class="slider-item active" data-hero-slider-item>
